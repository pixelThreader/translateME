{
  "version": 2,
  "builds": [
    { "src": "Translator/wsgi.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "static/$1" },
    { "src": "/wsgi.py", "dest": "Translator/wsgi.py" },
    { "handle": "filesystem" }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "Translator.settings"
  },
  "functions": {
    "api": {
      "runtime": "python3.9"
    }
  }
}
