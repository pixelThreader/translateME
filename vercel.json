{
  "version": 2,
  "builds": [
    { "src": "Translator/wsgi.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "static/$1" },
    { "src": "/(.*)", "dest": "Translator/wsgi.py" }
  ],
  "rewrites": [
    { "source": "/favicon.ico", "destination": "/static/favicon.ico" }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "Translator.settings"
  }
}
